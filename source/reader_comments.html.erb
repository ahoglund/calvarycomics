<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li class="active"><a href="/index.html">Home</a></li>
        <li class="active">Reader Comments</li>
      </ol>
    </div>
  </div>
</div>
<div class="container">
  <% data.publications.each do |type, publications| %>
    <div class="row">
      <% publications.each do |key, publication| %>
        <% if publication.reader_comments %>
          <div class="col-md-12">
            <a name="<%= key %>"></a>
          </div>
          <div class="col-md-3">
            <img src="images/order/<%= publication.order_image %>" alt="<%= publication.title %>">
          </div>
          <div class="col-md-9">
            <h4><%= publication.title %></h4>
            <br />
            <% publication.reader_comments.each do |reader_comment| %>
              <blockquote>
                <p><%= reader_comment %></p>
              </blockquote>
            <% end %>
          </div>
          <hr />
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
