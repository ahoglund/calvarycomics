---
title: Ordering
---
<div class="container">
  <div class="row col-md-3">
    <br /><br /><br />
    <p><strong>Send check or money order to:</strong></p>
    <address>
    Calvary Comics<br>
    P.O. Box 771<br>
    Dover, NJ 07802
    </address>
    <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
      <input type="hidden" name="cmd" value="_cart">
      <input type="hidden" name="business" value="calvary_comics@hotmail.com">
      <input type="hidden" name="display" value="1">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
        View Cart
      </button>
    </form>
  </div>
  <div class="row col-md-9">
  <% data.publications.each do |type, publications| %>
    <h1><%= type.split("_").map(&:capitalize).join(" ") %></h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>Description</th>
          <th>Price Details</th>
          <th>Order</th>
        </tr>
      </thead>
      <tbody>
      <% publications.each do |key, publication| %>
        <tr>
    			<td>
    				<img src="images/order/<%= publication.order_image %>" alt="<%= publication.title %>">
    			</td>
    			<td>
    				<strong><%= publication.title %></strong>
    			</td>
    			<td>
    				<ul>
              <% publication.description.each do |item| %>
    					  <li><%= item.capitalize %></li>
              <% end %>
    				</ul>
    			</td>
    			<td>
    				<ul>
              <% publication.pricing_details.each do |detail| %>
                <li><%= detail %></li>
              <% end %>
    				</ul>
    			</td>
    			<td>
            <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
              <% publication.paypal_order_details.each do |key, value| %>
                <input type="hidden" name="<%= key %>" value="<%= value %>">
              <% end %>
              <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                Add to cart
              </button>
            </form>
    			</td>
    		</tr>
      <% end %>
    </tbody>
    </table>
  <% end %>
	</div>
</div>
